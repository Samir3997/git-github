import java.time.OffsetDateTime;
import java.time.format.DateTimeFormatter;
import java.time.format.DateTimeParseException;

public class Main {
    public static void main(String[] args) {
        String dateTimeStr = "2024-08-12T01:22:23.607+05:30";
        DateTimeFormatter formatter = DateTimeFormatter.ISO_OFFSET_DATE_TIME;

        try {
            // Parse the date-time string using the custom formatter
            OffsetDateTime offsetDateTime = OffsetDateTime.parse(dateTimeStr, formatter);

            // Output the parsed date-time
            System.out.println("Parsed OffsetDateTime: " + offsetDateTime);
        } catch (DateTimeParseException e) {
            e.printStackTrace();
        }
    }
}
