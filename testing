public class MXcamt05400108HandlerTest extends AbstractServiceTest{
	private MXcamt05400108Handler handler;
    private MxCamt05400108 mxMessage;
    @Mock
    private EntityAccountMappingRepo eamRepo;
    @Mock
    private AbstractMX abstractMx;

    @Before
    public void setUp() {
         MockitoAnnotations.initMocks(this);
         handler = new MXcamt05400108Handler();
         mxMessage = new MxCamt05400108();
         
     }
    @Test
  public  void testSaveToAcctBalMgmtAndMapping() {
    	MxId mxId= new MxId();
    	ActiveOrHistoricCurrencyAndAmount amount = new ActiveOrHistoricCurrencyAndAmount();
    	amount.setValue(BigDecimal.valueOf(1000));
    	ReportEntry10 entry = new ReportEntry10();
    	entry.setAmt(amount);
    	List<ReportEntry10> entries = new ArrayList<>();
    	List<AccountNotification17> notifications = new ArrayList<>();
    	AccountNotification17 accountNotification = new AccountNotification17();
    	accountNotification.addNtry(entry);
    	amount.setCcy("MYR");
    	entries.add(entry);
    	BankToCustomerDebitCreditNotificationV08 notification = new BankToCustomerDebitCreditNotificationV08();
        mxMessage.setBkToCstmrDbtCdtNtfctn(notification);
        doReturn(mxId).when(abstractMx).getMxId();
        entry.setCdtDbtInd(CreditDebitCode.DBIT);
        EntryDetails9 entryDetails = new EntryDetails9();
        EntryTransaction10 txDetails = new EntryTransaction10();
        txDetails.setAddtlTxInf("STCD/TRN/STR00/PAYA/MY51BNMA1556010277/CPRO/BNMAMYKL/CPRB/MBBEMYKL");
        entryDetails.getTxDtls().add(txDetails);
        entry.getNtryDtls().add(entryDetails);
        notifications.add(accountNotification);
        notification.getNtfctn().add(accountNotification);
        mxMessage.setBkToCstmrDbtCdtNtfctn(notification);
        AppHdr apphdr = Mockito.mock(AppHdr.class);
        doReturn("BNMAMY2K").when(apphdr).from();
        doReturn("MBBEMYKL").when(apphdr).to();
        mxMessage.setAppHdr(apphdr);
        TransactionReferences6 tr=new TransactionReferences6();
        txDetails.setRefs(tr);
        tr.setEndToEndId("KTPP5636042");
        TransactionDates3 td=new TransactionDates3();
        try {
        	XMLGregorianCalendar xmlGregorianCalendar = DatatypeFactory.newInstance().newXMLGregorianCalendarDate(2024, 8, 12, DatatypeConstants.FIELD_UNDEFINED);
        td.setIntrBkSttlmDt(xmlGregorianCalendar);
        } catch (Exception e) {
            e.printStackTrace();
        }
        txDetails.setRltdDts(td);
        
        handler.saveToAcctBalMgmtAndMapping(mxMessage, 1L);


    }
    
    @Test
   public void testGetMessageType() {
        String messageType = handler.getMessageType();
        assertEquals(ILMCoreConstants.MXTYPECAMT05400108, messageType);
    }
}
