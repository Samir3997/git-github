import javax.xml.datatype.DatatypeFactory;
import javax.xml.datatype.XMLGregorianCalendar;
import java.util.GregorianCalendar;
import java.util.Calendar;

public class Main {
    public static void main(String[] args) {
        try {
            // Create a GregorianCalendar instance for the desired date
            GregorianCalendar gregorianCalendar = new GregorianCalendar();
            gregorianCalendar.set(Calendar.YEAR, 2024);
            gregorianCalendar.set(Calendar.MONTH, Calendar.AUGUST);  // Months are 0-based
            gregorianCalendar.set(Calendar.DAY_OF_MONTH, 12);
            gregorianCalendar.set(Calendar.HOUR_OF_DAY, 0);  // Set hour, minute, and second to 0 if not required
            gregorianCalendar.set(Calendar.MINUTE, 0);
            gregorianCalendar.set(Calendar.SECOND, 0);
            gregorianCalendar.set(Calendar.MILLISECOND, 0);

            // Optionally, set the time zone if needed
            gregorianCalendar.setTimeZone(java.util.TimeZone.getTimeZone("UTC"));

            // Convert GregorianCalendar to XMLGregorianCalendar
            DatatypeFactory datatypeFactory = DatatypeFactory.newInstance();
            XMLGregorianCalendar xmlGregorianCalendar = datatypeFactory.newXMLGregorianCalendar(gregorianCalendar);

            // Assuming td is your object and has the setIntrBkSttlmDt method
            // For example: TransactionDates3 td = new TransactionDates3();
            // td.setIntrBkSttlmDt(xmlGregorianCalendar);

            // Output the XMLGregorianCalendar to verify
            System.out.println("XMLGregorianCalendar: " + xmlGregorianCalendar);

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
